begin

end;
//------------------------------------------------------------------------------

procedure TFormCapturaWebcam.Button8Click(Sender: TObject);
begin

end;
//------------------------------------------------------------------------------

procedure TFormCapturaWebcam.Button11Click(Sender: TObject);
begin
   VideoGrabber1.BurstType := fc_TBitmap;
   VideoGrabber1.BurstMode := True;
end;
procedure TFormCapturaWebcam.Button12Click(Sender: TObject);
begin

  FormCadastroMembro.ImgFotoMembro.Picture := Image1.Picture;

end;

//------------------------------------------------------------------------------

procedure TFormCapturaWebcam.Button1Click(Sender: TObject);
begin
   VideoGrabber1.BurstType := fc_JpegFile;
   VideoGrabber1.BurstMode := True;
end;
//------------------------------------------------------------------------------

procedure TFormCapturaWebcam.Button5Click(Sender: TObject);
begin
   VideoGrabber1.BurstType := fc_BmpFile;
   VideoGrabber1.BurstMode := True;
end;
//------------------------------------------------------------------------------

procedure TFormCapturaWebcam.Button2Click(Sender: TObject);
begin
   VideoGrabber1.BurstMode := False;
end;
//------------------------------------------------------------------------------

procedure TFormCapturaWebcam.Button4Click(Sender: TObject);
begin
    VideoGrabber1.CaptureFrameTo (fc_TBitmap, '');
end;
//------------------------------------------------------------------------------

procedure TFormCapturaWebcam.Button6Click(Sender: TObject);
begin
end;
//------------------------------------------------------------------------------

procedure TFormCapturaWebcam.Button7Click(Sender: TObject);
