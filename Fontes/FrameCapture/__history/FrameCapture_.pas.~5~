{$R *.DFM}

uses UFrmCadastroMembro;
//------------------------------------------------------------------------------

procedure TFormCapturaWebcam.FormClose(Sender: TObject; var Action: TCloseAction);
begin
   VideoGrabber1.StopPreview;
end;

